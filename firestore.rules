rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Reglas para la colección 'pollas'
    match /pollas/{pollaId} {
      
      // LECTURA PÚBLICA:
      // Permitimos que cualquiera con el ID (Link) pueda ver los datos básicos.
      // Esto es necesario para la vista de invitados 'PublicTurnsView'.
      allow read: if true;

      // CREAR:
      // 1. El usuario debe estar autenticado.
      // 2. El campo 'adminId' del nuevo documento debe coincidir con su UID.
      allow create: if request.auth != null 
                    && request.resource.data.adminId == request.auth.uid;

      // ACTUALIZAR Y BORRAR:
      // 1. El usuario debe estar autenticado.
      // 2. El usuario debe ser el propietario del documento existente (adminId coincide).
      allow update, delete: if request.auth != null 
                            && resource.data.adminId == request.auth.uid;
    }
    
    // Bloquear acceso a cualquier otra colección no definida explícitamente
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
